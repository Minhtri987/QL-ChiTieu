@model QL_ChiTieu.Models.User

@{
    ViewBag.Title = "Register";
}
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<style>
    .container .row .card{
        background-color:transparent;
    }
    .col{
        width:328px;
    }
    .form-group{ margin-bottom:20px;}
    .container{
        margin:0 auto;
        border-radius:5px;
        width:800px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
        text-align:center;
    }
</style>

<h2>Sign up</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <article class="card-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                        <form>
                            @Html.AntiForgeryToken()

                            <div class="form-row">
                                <div class="col form-group">
                                    <label class="form-label" for="FirstName">First Name</label>
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>

                                <div class="col form-group">
                                    <label class="form-label" for="LastName">Last Name</label>
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            <!-- form-group end.// -->

                            <div class="col form-group">
                                <label class="form-label" for="Email">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="col form-group">
                                <label class="form-label" for="Password">Password</label><div></div>
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control custom-confirm-password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="col form-group">
                                <label class="form-label" for="ConfirmPassword">ConfirmPassword</label><div></div>
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes =new{ @class = "form-control custom-confirm-password"}})
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "badge badge-danger" })
                            </div>
                            <style>
                                .custom-confirm-password{
                                    font-size:18px;
                                    font-weight:bolder;
                                    letter-spacing: 1px;
                                }
                            </style>
                            </div>

                            <div class="form-group d-flex justify-content-between align-items-center">
                                <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                                <a href=/Account/Login class="float-right btn btn-outline-primary mt-1">Log in</a>
                            </div>
                             </form>
                        }
               
                </article> <!-- card-body end .// -->
              
            </div> <!-- card.// -->
        </div> <!-- col.//-->

    </div> <!-- row.//-->


</div>



